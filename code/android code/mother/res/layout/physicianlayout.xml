<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000066" >

    <ImageButton
        android:id="@+id/mn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/d" />

    <ImageButton
        android:id="@+id/mng2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mn1"
        android:layout_toRightOf="@+id/mn1"
        android:src="@drawable/dd" />

    <ImageButton
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mng2"
        android:layout_toRightOf="@+id/mng2"
        android:src="@drawable/ddd" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mn1"
        android:layout_marginTop="14dp"
        android:src="@drawable/phys" />

    <Button
        android:id="@+id/hist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Add history" />

    <Button
        android:id="@+id/med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Add medication" />

</RelativeLayout>